---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
      rel="stylesheet"
    />

    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Crea globos de sexo gratis y sencillo"
    />
    <meta property="og:image" content="portait.png" />
    <meta property="og:url" content="https://globossexo.vercel.app" />
    <meta name="twitter:card" content="summary_large_image" />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --background: #0c0c0c;
    --border-color: #1c1d20;

    --component-background: #0f0f0f63;
    --component-background-selected: #1a1a1a63;

    --background-style-color: rgb(26, 26, 26);
  }

  html {
    background: var(--background);
    background-image: radial-gradient(
      circle at 0 0,
      var(--background-style-color) 1px,
      transparent 1px
    );
    background-size: 16px 16px;
    font-family: "Inter", sans-serif;
  }
</style>
